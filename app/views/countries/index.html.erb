<div class="container">
  <h1 class="mt-5">Список стран</h1>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Название</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= link_to country.name, country %></td>
          <td>
            <%= link_to "Редактировать", edit_country_path(country), class: "btn btn-primary btn-sm" %>
            <%= link_to "Удалить", country_path(country), data: { turbo_method: :delete, turbo_confirm: 'You are sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Новая страна", new_country_path, class: "btn btn-success" %>
</div>
